<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CH_Check_Max_Filters</fullName>
        <active>true</active>
        <description>Only one filter is allowed per schedule. But you must be able to update the schedule</description>
        <errorConditionFormula>CH_Workgroup_Schedule__r.CH_Workgroup_Filters_Count__c  &gt; 0  &amp;&amp;  PRIORVALUE(Id) = null</errorConditionFormula>
        <errorMessage>Only one filter can be created</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_WorkGroupSchedule_Single_region</fullName>
        <active>true</active>
        <errorConditionFormula>IF(INCLUDES(CH_Region__c, &quot;Market Asian and Japan&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market Europe&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market Greater China&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market India&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market Middle East &amp; Africa&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market North America&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;NNO Others&quot;),1,0) + 
IF(INCLUDES( CH_Region__c, &quot;Market Latin America&quot;),1,0) &gt; 1</errorConditionFormula>
        <errorDisplayField>CH_Region__c</errorDisplayField>
        <errorMessage>The selection of several Regions in the field “Region” isn’t allowed. Please select a single Region or none.</errorMessage>
    </validationRules>
</CustomObject>
