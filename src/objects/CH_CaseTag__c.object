<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CH_DetailsCannotContainDashes</fullName>
        <active>true</active>
        <description>NOKIASC-28914: Case Tag Issue Details and Additional Details cannot contain dashes</description>
        <errorConditionFormula>RecordType.DeveloperName = &apos;CH_CaseTag&apos; &amp;&amp; (CONTAINS(CH_IssueDetails__c, &apos;-&apos;) || CONTAINS(CH_AdditionalDetails__c, &apos;-&apos;))</errorConditionFormula>
        <errorMessage>Issue Details and Additional Details cannot contain dashes</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_PreventUpdate</fullName>
        <active>true</active>
        <description>NOKIASC-28989 : After creation, only the Status, Legacy Tag Name, Issue Details and Additional Details can be modified</description>
        <errorConditionFormula>!ISNEW() &amp;&amp; (ISCHANGED(CH_IssueType__c) || ISCHANGED(CH_TagID__c) || ISCHANGED(CH_Product__c))</errorConditionFormula>
        <errorMessage>After creation, only the Status, Legacy Tag Name, Issue Details and Additional Details can be modified.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_ProductRequired</fullName>
        <active>true</active>
        <errorConditionFormula>RecordType.DeveloperName = &apos;CH_CaseTag&apos; &amp;&amp; ISBLANK(CH_Product__c)</errorConditionFormula>
        <errorMessage>These required fields must be completed: Product</errorMessage>
    </validationRules>
</CustomObject>
