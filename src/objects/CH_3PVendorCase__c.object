<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CH_Other3PVendor_Cannot_Blank</fullName>
        <active>true</active>
        <description>NOKIASC-24648:if  3P Vendor = “Other”, then field &quot;Other 3P Vendor needs to be filled else Other 3P Vendor has to be let empty</description>
        <errorConditionFormula>OR(AND(
  ISPICKVAL(CH_3PVendor__c, &quot;Other&quot;),
  ISBLANK ( CH_Other3PVendor__c )
),
				AND(
  NOT(ISPICKVAL(CH_3PVendor__c, &quot;Other&quot;)),
  NOT (ISBLANK ( CH_Other3PVendor__c ))
)
			)</errorConditionFormula>
        <errorMessage>Invalid combination between &quot;3P Vendor&quot; and &quot;Other 3P Vendor. Please set 3P Vendor to &quot;Other&quot; if you want to specify &quot;3P Vendor Other&quot;.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_Restrict_to_Create_3P</fullName>
        <active>true</active>
        <description>As part of the Defect NOKIASC-28942</description>
        <errorConditionFormula>((OR((CH_OriginatingCaseNumber__r.RecordType.Name = &quot;Nokia Incident with Restoration&quot;),(CH_OriginatingCaseNumber__r.RecordType.Name = &quot;Nokia Standard Case&quot;),(CH_OriginatingCaseNumber__r.RecordType.Name = &quot;Nokia Information Request&quot;))

&amp;&amp;

OR(ISPICKVAL(CH_OriginatingCaseNumber__r.Status,&quot;Closed&quot;),ISPICKVAL(CH_OriginatingCaseNumber__r.Status,&quot;Completed&quot;),ISPICKVAL(CH_OriginatingCaseNumber__r.Status,&quot;Cancelled&quot;))) ||

((CH_OriginatingCaseNumber__r.RecordType.Name = &quot;Problem&quot;) &amp;&amp; 
 OR(ISPICKVAL(CH_OriginatingCaseNumber__r.Status,&quot;Closed&quot;),ISPICKVAL(CH_OriginatingCaseNumber__r.Status,&quot;Cancelled&quot;))))

&amp;&amp;
ISNEW()</errorConditionFormula>
        <errorMessage>3rd Party Vendor case cannot be created on case in status Closed, Completed or Cancelled</errorMessage>
    </validationRules>
</CustomObject>
