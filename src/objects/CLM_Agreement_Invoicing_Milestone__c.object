<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Category_not_editable_on_update</fullName>
        <active>true</active>
        <description>On update a record, Category picklist value cannot be changed!</description>
        <errorConditionFormula>AND(
				NOT(ISNEW()),
				ISCHANGED(Category__c),
				NOT(ISBLANK(PRIORVALUE(Category__c)))
)</errorConditionFormula>
        <errorDisplayField>Category__c</errorDisplayField>
        <errorMessage>Category picklist value cannot be changed!</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Percentage_Validation</fullName>
        <active>true</active>
        <description>All the percentage field values have to be between 0% and 100%.</description>
        <errorConditionFormula>OR(
					DP__c &lt; 0.0,
					DP__c &gt; 1.0,
					Delivery__c &lt; 0.0,
					Delivery__c &gt; 1.0,
					PAC__c &lt; 0.0,
					PAC__c &gt; 1.0,
					FAC__c &lt; 0.0,
					FAC__c &gt; 1.0
)</errorConditionFormula>
        <errorMessage>Please add valid percentages (0-100%)!</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Summary_Validation</fullName>
        <active>true</active>
        <description>The summary of the percentage fields has to be 0 or 100%</description>
        <errorConditionFormula>/*AND(
    (DP__c + Delivery__c + PAC__c + FAC__c) &lt;&gt; 0.0,
				(DP__c + Delivery__c + PAC__c + FAC__c) &lt;&gt; 1.0
)*/
AND(
    (BLANKVALUE(DP__c, 0.0) + BLANKVALUE(Delivery__c, 0.0) + BLANKVALUE(PAC__c, 0.0) + BLANKVALUE(FAC__c, 0.0)) &lt;&gt; 0.0,    (BLANKVALUE(DP__c, 0.0) + BLANKVALUE(Delivery__c, 0.0) + BLANKVALUE(PAC__c, 0.0) + BLANKVALUE(FAC__c, 0.0)) &lt;&gt; 0.0,
    (BLANKVALUE(DP__c, 0.0) + BLANKVALUE(Delivery__c, 0.0) + BLANKVALUE(PAC__c, 0.0) + BLANKVALUE(FAC__c, 0.0)) &lt;&gt; 1.0
)</errorConditionFormula>
        <errorMessage>The summary of the percentage fields has to be 0 or 100%</errorMessage>
    </validationRules>
</CustomObject>
