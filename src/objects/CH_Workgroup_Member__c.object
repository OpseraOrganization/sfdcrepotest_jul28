<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <enableEnhancedLookup>true</enableEnhancedLookup>
    <validationRules>
        <fullName>CH_CA_WorkgroupMember_RecordTypeCheck</fullName>
        <active>true</active>
        <description>NOKIASC-28429:User should select only CH_CA_Workgroup while creating CH_CA_WorkgroupMember.</description>
        <errorConditionFormula>AND(RecordType.DeveloperName=&quot;CH_CA_WorkgroupMember&quot;,
				CH_Workgroup__r.RecordType.DeveloperName=&quot;CH_KB_Workgroup&quot;)</errorConditionFormula>
        <errorMessage>you cannot create a Case Handling Workgroup Member in a Knowledge Management Workgroup</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_ChangeMember</fullName>
        <active>true</active>
        <description>Do not change the workgroup member</description>
        <errorConditionFormula>AND( 
RecordType.DeveloperName = &quot;CH_KB_Workgroup_Members&quot;, 

				ISCHANGED( CH_User__c ) )</errorConditionFormula>
        <errorDisplayField>CH_User__c</errorDisplayField>
        <errorMessage>You can&apos;t change the workgroup member. Try to remove and insert a new record.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_KB_WorkgroupMember_RecordTypeCheck</fullName>
        <active>true</active>
        <description>NOKIASC-28429:User should select only CH_KB_Workgroup while creating CH_KB_WorkgroupMember.</description>
        <errorConditionFormula>AND(RecordType.DeveloperName=&quot;CH_KB_Workgroup_Members&quot;, 
				CH_Workgroup__r.RecordType.DeveloperName=&quot;CH_CA_Workgroup&quot; )</errorConditionFormula>
        <errorMessage>You cannot create a Knowledge Management Workgroup Member in a Case Handling  Workgroup</errorMessage>
    </validationRules>
</CustomObject>
