<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CannotUpdateEventHost</fullName>
        <active>false</active>
        <errorConditionFormula>AND(
NOT(ISBLANK(PRIORVALUE(Event_Host__c))), 
ISCHANGED(Event_Host__c),
NOT(ISNEW())
)</errorConditionFormula>
        <errorDisplayField>Event_Host__c</errorDisplayField>
        <errorMessage>You cannot update the Event Host this Event.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Cannot_Change_Cancellation_Reason</fullName>
        <active>true</active>
        <errorConditionFormula>AND ( ISCHANGED( Cancellation_reason__c ) ,
 Event_cancelled__c = FALSE )</errorConditionFormula>
        <errorDisplayField>Cancellation_reason__c</errorDisplayField>
        <errorMessage>Cannot change the Cancellation Reason if the Event is not cancelled</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Cannot_change_record_type</fullName>
        <active>true</active>
        <errorConditionFormula>ISCHANGED( RecordTypeId )</errorConditionFormula>
        <errorMessage>Action not allowed - cannot change record type of the event</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EEC_EndDate</fullName>
        <active>true</active>
        <description>When Event Start Date not blank, Event End Date cannot be blank.</description>
        <errorConditionFormula>AND (
				 RecordType.DeveloperName = &quot;EEC&quot; ,
				 NOT ( ISBLANK ( Event_Start_Date__c ) ) ,
				 ISBLANK ( Event_End_Date__c )
				)</errorConditionFormula>
        <errorDisplayField>Event_End_Date__c</errorDisplayField>
        <errorMessage>You must define a End Date for the Event.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EEC_StartDate</fullName>
        <active>true</active>
        <description>When Event End Date not blank, Event Start Date cannot be blank.</description>
        <errorConditionFormula>AND (
				 RecordType.DeveloperName = &quot;EEC&quot; ,
				 NOT ( ISBLANK ( Event_End_Date__c ) ) ,
				 ISBLANK ( Event_Start_Date__c )
				)</errorConditionFormula>
        <errorDisplayField>Event_Start_Date__c</errorDisplayField>
        <errorMessage>You must define a Start Date for the Event.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>EEC_Venue</fullName>
        <active>true</active>
        <description>To initiate the process in selected EEC location.</description>
        <errorConditionFormula>AND (
				 RecordType.DeveloperName = &quot;EEC&quot; ,
				 ISBLANK (Venue__c)
				)</errorConditionFormula>
        <errorDisplayField>Venue__c</errorDisplayField>
        <errorMessage>You must define a Venue, to inform the EEC Contact about upcoming Event.</errorMessage>
    </validationRules>
</CustomObject>
