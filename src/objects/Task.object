<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Lock_Task_when_Completed</fullName>
        <active>false</active>
        <description>This validation rule will not allow task updation once it is marked completed.</description>
        <errorConditionFormula>isTaskCompleted__c  = true</errorConditionFormula>
        <errorMessage>This task is completed and cannot be updated anymore.</errorMessage>
    </validationRules>
</CustomObject>
