<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Cross_Project_Impact_Mandatory</fullName>
        <active>true</active>
        <description>The Cross Project Impact should be filled from status Consolidate: Level of Effort Complete onwards.</description>
        <errorConditionFormula>AND(OR( 
ISPICKVAL( Status__c , &apos;Consolidate: Level of Effort Complete&apos;),
ISPICKVAL( Status__c , &apos;Consolidate: Submit for CCB Review&apos;),
ISPICKVAL( Status__c , &apos;Approve: Approved to Deploy&apos;),
ISPICKVAL( Status__c , &apos;Release: Design&apos;),
ISPICKVAL( Status__c , &apos;Release: Build&apos;),
ISPICKVAL( Status__c , &apos;Release: Test&apos;),
ISPICKVAL( Status__c , &apos;Release: SIT&apos;),
ISPICKVAL( Status__c , &apos;Release: UAT&apos;),
ISPICKVAL( Status__c , &apos;Release: Build Production&apos;),
ISPICKVAL( Status__c , &apos;Release: Test Production&apos;),
ISPICKVAL( Status__c , &apos;Close: Deployed&apos;)),
ISBLANK( TEXT(  Cross_Project_Impact__c  )))</errorConditionFormula>
        <errorMessage>Please select Yes/No if this requirement has any &quot;Cross Project Impact&quot;.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Cross_project_impact_summary_required</fullName>
        <active>true</active>
        <description>Please select Yes/No if this requirement has any &quot;Cross Project Impact&quot;. If yes, provide a Cross Project Impact Summary.</description>
        <errorConditionFormula>AND( ISPICKVAL( Cross_Project_Impact__c , &apos;Yes&apos;), ISBLANK( Cross_Project_Impact_Summary__c ))</errorConditionFormula>
        <errorDisplayField>Cross_Project_Impact_Summary__c</errorDisplayField>
        <errorMessage>Please enter any comment for &quot;Cross Project Impact Summary&quot;.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Scoped_Reqt_Cant_be_Edited</fullName>
        <active>false</active>
        <errorConditionFormula>AND( 
ISCHANGED(Status__c) , 
OR( 
ISPICKVAL(Status__c, &quot;Approve: Approved to Deploy&quot;), 
ISPICKVAL(Status__c, &quot;Release: Design&quot;), 
ISPICKVAL(Status__c, &quot;Release: Build&quot;), 
ISPICKVAL(Status__c, &quot;Release: Test&quot;), 
ISPICKVAL(Status__c, &quot;Release: SIT&quot;), 
ISPICKVAL(Status__c, &quot;Release: UAT&quot;), 
ISPICKVAL(Status__c, &quot;Release: Build Production&quot;), 
ISPICKVAL(Status__c, &quot;Release: Test Production&quot;), 
ISPICKVAL(Status__c, &quot;Close: Deployed&quot;) 
), 
$User.CompanyName &lt;&gt; &quot;Accenture&quot;, 
RIGHT($User.Email, 13) &lt;&gt; &quot;accenture.com&quot;, 
RIGHT($User.Username, 13) &lt;&gt; &quot;accenture.com&quot;, 
$User.CompanyName &lt;&gt; &quot;Salesforce&quot;, 

$User.Id &lt;&gt; &quot;00558000001VOQD&quot;, 
$User.Id &lt;&gt; &quot;00558000001VDle&quot;, 
$User.Id &lt;&gt; &quot;00558000001UVe0&quot;, 
$User.Id &lt;&gt; &quot;00541000005ZnvR&quot;, 
$User.Id &lt;&gt; &quot;005410000067OFJ&quot;, 
$User.Id &lt;&gt; &quot;005410000054MFR&quot;,
$User.Id &lt;&gt; &quot;00541000007h8C1&quot;,
$User.Id &lt;&gt; &quot;00541000007hD85&quot;,	
$User.Id &lt;&gt; &quot;0052M000008bsnU&quot;,
$User.Id &lt;&gt; &quot;0052M000008qqwn&quot;,	
$Profile.Id &lt;&gt; &quot;00e58000000Rh5P&quot; 

)</errorConditionFormula>
        <errorMessage>Please work with your scrum team to update requirements which have already been scoped.</errorMessage>
    </validationRules>
</CustomObject>
