<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Address_field_for_new_End_Customer</fullName>
        <active>true</active>
        <errorConditionFormula>AND($Profile.Name &lt;&gt; &apos;Data Loader Profile&apos;, RecordType.Name &lt;&gt; &apos;Direct Sales&apos;, 
OR( 
AND( 
(ISPICKVAL( Customer_Type__c, &apos;New customer&apos;)), 
OR( 
ISBLANK( Street ), 
ISBLANK( City ), 
ISBLANK( PostalCode ), 
ISBLANK( Country ))) 
, 
AND( 
(ISPICKVAL( Customer_Type__c, &apos;Existing customer in new country&apos;)), 
OR( 
ISBLANK( Street ), 
ISBLANK( City ), 
ISBLANK( PostalCode ), 
ISBLANK( Country ))) 
) 
)</errorConditionFormula>
        <errorMessage>Please Enter The End Customer Address Details.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Distributor_cannot_be_null</fullName>
        <active>true</active>
        <description>This validation check that if any IR Lead is created then Distributor Company should be entered and 
if any Distributor Lead is created then IR Company should be entered</description>
        <errorConditionFormula>AND( 
$Profile.Name != &apos;Data Loader Profile&apos;, 
AND( 
RecordType.Name = &apos;Indirect Deal Registration&apos;, 
Distributor_Partner_Company__c = &apos;&apos;))</errorConditionFormula>
        <errorDisplayField>Distributor_Partner_Company__c</errorDisplayField>
        <errorMessage>Please Enter the Distributor Company</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Indirect_Reseller_Company</fullName>
        <active>true</active>
        <errorConditionFormula>AND( 
$Profile.Name != &apos;Data Loader Profile&apos;, 
AND( 
RecordType.Name = &apos;Distributor Deal Registration&apos;, 
Indirect_Reseller_Company__c = &apos;&apos;), 
ISBLANK(If_Other_please_provide_IR_Name__c)
)</errorConditionFormula>
        <errorDisplayField>Indirect_Reseller_Company__c</errorDisplayField>
        <errorMessage>Please Enter the Indirect Reseller Company</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Lead_Status_Read_Only</fullName>
        <active>true</active>
        <description>Req#2161 Lead Status &quot;Read Only&quot;</description>
        <errorConditionFormula>AND(
NOT(
OR(
$Profile.Name = &apos;System Administrator&apos;,
$Profile.Name = &apos;Data Loader Profile&apos;,
$Profile.Name = &apos;Nokia Admin Profile&apos;,
$Profile.Name = &apos;Global Process Admin Profile&apos;	
)
),
OR(
RecordType.Name = &apos;Distributor Deal Registration&apos;,
RecordType.Name = &apos;Indirect Deal Registration&apos;,
RecordType.Name = &apos;Reseller Deal Registration&apos;
),
AND(
$Permission.PRM_PSM_Permission = FALSE,
$Permission.PRM_Deal_Registration_Permission = FALSE
),
OR(
AND(
ISCHANGED(Status),
NOT(AND(PRIORVALUE(Status) = &apos;Approved&apos;,
ISPICKVAL(Status, &apos;Closed - Converted (Qualified)&apos;)))
),
AND(	
NOT(ISPICKVAL(Status, &apos;Open&apos;)),
ISNEW()
)
)
)</errorConditionFormula>
        <errorDisplayField>Status</errorDisplayField>
        <errorMessage>You can&apos;t Change the Lead Status Manually</errorMessage>
    </validationRules>
</CustomObject>
