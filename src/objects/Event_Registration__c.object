<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CannotUpdateEventOnParticipant</fullName>
        <active>true</active>
        <errorConditionFormula>AND(
NOT(ISBLANK(PRIORVALUE(Event__c))),
ISCHANGED(Event__c),
NOT(ISNEW())
)</errorConditionFormula>
        <errorDisplayField>Event__c</errorDisplayField>
        <errorMessage>You cannot update the Event of this Participant.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Cannot_change_record_type</fullName>
        <active>true</active>
        <errorConditionFormula>ISCHANGED( RecordTypeId )</errorConditionFormula>
        <errorMessage>Action not allowed - cannot change record type of the participant</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Content_Participant_cant_answer_events</fullName>
        <active>true</active>
        <errorConditionFormula>AND( 
    Event__r.RecordType.DeveloperName = &quot;ERM&quot; 
    , OR( 
        OR(ISPICKVAL(Role__c, &quot;Content&quot;) 
    ,      ISPICKVAL(Role__c, &quot;CT Member&quot;)
										)
								)
    , OR( 
        ISPICKVAL(Status__c, &quot;Confirmed&quot;) 
        , ISPICKVAL(Status__c, &quot;Rejected&quot;) 
        , ISPICKVAL(Status__c, &quot;Partial Confirmed&quot;) 
    ) 
)</errorConditionFormula>
        <errorMessage>Only a speaker or assistant can accept or reject an invitation for ERM.</errorMessage>
    </validationRules>
</CustomObject>
