<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>CH_CAWorkgroupName</fullName>
        <active>true</active>
        <description>NOKIASC-29142: Only DV&amp;T, System Admin and Data Loader can update Name of Workgroup.</description>
        <errorConditionFormula>AND(
    ISCHANGED(Name),
	$RecordType.Name = &quot;CH_CA_Workgroup&quot;,
    $Profile.Name&lt;&gt;&apos;System Administrator&apos;,
    $Profile.Name&lt;&gt;&apos;Data Loader Profile&apos;,
    NOT($Permission.CARE_DVT_Admin),
    NOT($Permission.CH_DVTAdminstration)          

)</errorConditionFormula>
        <errorDisplayField>Name</errorDisplayField>
        <errorMessage>You don&apos;t have permission to update Workgroup Name Field.</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>CH_KBWorkgroupLimit</fullName>
        <active>true</active>
        <description>Validation rule to limit the number of characters of KB workgroups</description>
        <errorConditionFormula>AND (($RecordType.DeveloperName=&quot;CH_KB_Workgroup&quot;),LEN( Name ) &gt;= 36)</errorConditionFormula>
        <errorDisplayField>Name</errorDisplayField>
        <errorMessage>Workgroup name must have up to 36 characters</errorMessage>
    </validationRules>
