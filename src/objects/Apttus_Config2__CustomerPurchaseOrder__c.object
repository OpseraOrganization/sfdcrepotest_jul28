<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>DS_EndDate_Check</fullName>
        <active>true</active>
        <description>Cannot change status to Ready for Execution, if End date is a past date</description>
        <errorConditionFormula>AND(
		$Profile.Name&lt;&gt;$Label.Data_Loader_Profile_Name,
		ISPICKVAL( Apttus_Config2__Status__c , &apos;Ready for Execution&apos;) ,
		Contract_end_date__c  &lt;  TODAY(),
		OR(ISCHANGED(Apttus_Config2__Status__c), ISCHANGED( Contract_end_date__c))  
		)</errorConditionFormula>
        <errorMessage>End Date cannot be a past date</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>DS_Term_Zero_Error_Message_CPO</fullName>
        <active>true</active>
        <errorConditionFormula>OR(
AND(ISCHANGED(Terms__c),Terms__c &lt;= 0),

AND(OR(ISCHANGED(Contract_start_date__c) ,ISCHANGED(Contract_end_date__c)),IF(MOD(Contract_end_date__c- Contract_start_date__c,30) =0 , (Contract_end_date__c- Contract_start_date__c) /30 , 

IF(MOD(Contract_end_date__c- Contract_start_date__c,30) &gt;=15, FLOOR(((Contract_end_date__c- Contract_start_date__c) /30)) +1, 

Floor( (Contract_end_date__c- Contract_start_date__c)/ 30 )))&lt;=0)

)</errorConditionFormula>
        <errorDisplayField>Terms__c</errorDisplayField>
        <errorMessage>Term cannot be 0 or negative</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Mandatory_field_Check</fullName>
        <active>true</active>
        <description>The user should not be able to change the Status of the CPO if Validity Check is RED</description>
        <errorConditionFormula>AND(
ISPICKVAL(DS_CPO_Validity_Check__c , &apos;Red&apos;),
ISCHANGED( Apttus_Config2__Status__c) 
)</errorConditionFormula>
        <errorMessage>Please fill the mandatory fields to proceed further</errorMessage>
    </validationRules>
</CustomObject>
